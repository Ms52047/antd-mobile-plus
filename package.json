{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "start": "dumi dev",
    "build": "dumi build",
    "ci": "npm run lint && npm run compile && npm run test",
    "entry":"node ./scripts/entry.js",
    "newc": "node ./scripts/createPlusTemplate.js",
    "compile": "father-build",
    "pub": "lerna publish --force-publish=*",
    "lint": "prettier packages/**/*.{ts,tsx} --check && stylelint packages/**/*.less",
    "format": "prettier packages/**/*.{ts,tsx} --write && stylelint packages/**/*.less --fix",
    "test": "umi-test --coverage"
  },
  "gitHooks": {
    "pre-commit": "npm run ci",
    "commit-msg": "node scripts/verifyCommit.js"
  },
  "devDependencies": {
    "@testing-library/react": "^10.4.7",
    "@types/babel__core": "7.1.12",
    "@types/babel__traverse": "7.0.15",
    "@types/classnames": "^2.2.10",
    "@types/jest": "^26.0.15",
    "@types/node": "^14.0.27",
    "@umijs/test": "^3.2.25",
    "@umijs/types": "^3.2.25",
    "@umijs/utils": "^3.2.25",
    "babel-plugin-version": "^0.2.3",
    "cnpm": "6.1.1",
    "dumi": "^1.1.7",
    "dumi-theme-mobile": "^1.0.0",
    "father-build": "^1.18.5",
    "husky": "^3.1.0",
    "lerna": "2.11.0",
    "lint-staged": "^10.2.11",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.1.2",
    "rc-form": "^2.4.12",
    "react-sticky": "^6.0.3",
    "yorkie": "^2.0.0",
    "sitemap":"latest"
  }
}
